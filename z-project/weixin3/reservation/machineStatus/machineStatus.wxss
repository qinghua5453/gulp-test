.pge-machine-reserve-status{
  width: 100vw;
  height: 100vh;
}
.pge-machine-reserve-status .pge-status-bg{
  width: 100%;
  height: 94rpx;
  background-color: rgba(22, 119, 255, 1);
}
.cmp-machinestatus-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 208rpx;
  height: 208rpx;
  margin: 14rpx;
  background-color: rgba(22, 119, 255, 1);
  box-shadow: 0rpx 6rpx 8rpx 0rpx rgba(22, 119, 255, 0.3);
  border-radius: 50%;
  text-align: center;
  font-size: 48rpx;
  font-weight: bold;
  color: #FFFFFF;
}

.cmp-machinestatus-groupInner {
  display: flex;
  align-items: center;
  width: 236rpx;
  height: 236rpx;
  border-radius: 50%;
  margin: 16rpx;
  background: rgba(108, 169, 255, 0.2);
}

.cmp-machinestatus-groupOut {
  position: relative;
  display: flex;
  align-items: center;
  width: 268rpx;
  height: 268rpx;
  background-color: rgba(130, 181, 253, 0.22);
  border-radius: 50%;
  z-index: 8;
  margin: -144rpx auto 0;
  z-index: 8;
}
.pge-machine-reserve-status .pge-machine-reserve-time{
  font-size: 28rpx;
  font-weight: 400;
  line-height: 40rpx;
  color: #999;
  margin-top: 24rpx;
  text-align: center;
}
.pge-machine-reserve-time text{
  color: #1874FF;
}
.pge-recommend-machine-box{
  width: 684rpx;
  height: 400rpx;
  background: #FFFFFF;
  border-radius: 28rpx;
  padding: 0 35rpx;
  margin: 28rpx auto 0;
}
.pge-recommend-machine-box .recommend-title{
  display: inline-block;
  font-size: 32rpx;
  padding: 20rpx 0 24rpx;
  line-height: 44rpx;
}
.pge-recommend-machine{
  position: relative;
  display: flex;
  align-items: center;
  border: 1px solid #EEEEEE;
  padding: 32rpx 41rpx;
  border-radius: 28rpx;
}
.pge-recommend-machine .machine-status-bg{
  position: absolute;
  right: 0;
  top: 0;
  width: 88rpx;
  height: 88rpx;
  background: url(https://static.qiekj.com/h5/alipay/machinestatusmachine_status.png) no-repeat;
  background-size: cover;
}
.pge-recommend-machine image{
  width: 69rpx;
  height: 69rpx;
  margin-right: 26rpx;
}
.pge-machine-text text{
  display: inline-block;
  color: #1677FF;
}
.pge-machine-text .name{
  font-size: 32rpx;
  font-weight: 500;
  line-height: 44rpx;
}
.pge-machine-text .tips{
  font-size: 24rpx;
}
.pge-machine-operation{
  width: 492rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 0 auto;
}
.pge-machine-operation button{
  width: 224rpx;
  height: 72rpx;
  line-height: 72rpx;
  border: 1px solid #2088FF;
  border-radius: 36rpx;
  text-align: center;
  color: #2088FF;
  font-size: 32rpx;
  font-weight: 400;
  margin-top: 32rpx;
}
.pge-machine-status-ad{
  margin-top: 47rpx;
}