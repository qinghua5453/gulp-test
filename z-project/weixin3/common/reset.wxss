view {
    box-sizing: border-box;
    font-family: "PingFang SC", "Helvetica Neue", Helvetica, "Hiragino Sans GB", "Microsoft YaHei", Arial, sans-serif;
}

page {
    /* flex: 1; */
    display: flex;
    width: 100%;
    height: 100%;
    background-color: #f5f5f5;
    font-size: 28rpx;
    color: #333333;
}

button::after {
    border: none;
}

button {
    margin: 0;
    padding: 0;
    outline: none;
    border: none;
    list-style: none;
    border: 1px solid transparent;
    background-color: transparent;
}

image {
    width: 100%;
    height: 100%;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.countdown-hide{
  display: none;
}

