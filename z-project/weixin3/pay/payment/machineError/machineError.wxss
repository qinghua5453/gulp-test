.pge-machine-error{
    width: 100vw;
    height: 100vh;
    text-align: center;
    background: #fff;
}
.pge-machine-error .pge-machine-error-img{
    width: 388rpx;
    height: 388rpx;
    margin: 104rpx auto 6rpx;
}

.pge-machine-error .btn-machine-boot{
    display: flex;
    align-items: center;
    justify-content: center;
    width: 224rpx;
    height: 72rpx;
    margin: 0 auto 48rpx;
    line-height: 72rpx;
    border-radius: 36rpx;
    border: 1px solid #2088FF;
    text-align: center;
    font-size: 32rpx;
    color: #2088FF;
}
.btn-machine-boot image{
    width: 30rpx;
}
.pge-machine-error .machine-error-text{
    font-size: 32rpx;
    color: #999;
}
.pge-machine-error .pge-footer{
    position: absolute;
    left: 0;
    bottom: 200rpx;
    width: 100%;
    text-align: center;
}
.pge-footer .service-desc{
    color: #999;
    font-size: 24rpx;
    text-align: center;
    margin-top: 10rpx;
}
.pge-machine-error .pge-error-code{
    color: #ccc;
    font-size: 28rpx;
}
.pge-footer-desc-text {
    position: fixed;
    width: 550rpx;
    bottom: 30rpx;
    left: 100rpx;
    height: 34rpx;
    font-size: 28rpx;
    font-weight: 400;
    text-align: center;
    color: rgba(204, 204, 204, 1);
    line-height: 34rpx;
}
.pge-call{
    margin-left: 10rpx;
}