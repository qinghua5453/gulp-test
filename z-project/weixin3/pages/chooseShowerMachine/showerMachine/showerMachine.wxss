/* 解锁过渡页 */
.transition {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #FFFFFF;
    padding-top: 125rpx;
    z-index: 100;
  }
  
  .transition-con {
    width: 315rpx;
    height: 315rpx;
    background-image: url(https://static.qiekj.com/h5/pay/start.gif);
    background-size: cover;
    margin: 0 auto;
    margin-top: 280rpx;
  }
  
  .transition .info {
    font-size: 32rpx;
    line-height: 50rpx;
    font-weight: bold;
    height: 50rpx;
    width: 100%;
    text-align: center;
    color: rgba(51, 51, 51, 0.3);
    margin-top: 60rpx;
  }
