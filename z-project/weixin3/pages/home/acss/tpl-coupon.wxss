.tpl-coupon-box {
  width: 750rpx;
  background: #fff;
  margin-top: 20rpx;
  padding:40rpx 30rpx 30rpx 30rpx;
}

.tpl-coupon-box .header {
  padding-left: 18rpx;
  margin-bottom: 16rpx;
}

.tpl-coupon-box .main-title {
  font-size:32rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:44rpx;
  margin-bottom: 8rpx;
}

.tpl-coupon-box .sub-title {
  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:34rpx;
}

.tpl-coupon-box .scroll-view-box{
  width:690rpx;
  height:186rpx;
  background:rgba(255,242,242,1);
  border-radius:20rpx 0px 0px 20rpx;
  padding:16rpx 0 16rpx 18rpx;
  margin-bottom: 20rpx;
}

.tpl-coupon-box .scroll-view_H {
  display: flex;
  align-items: center;
}

.tpl-coupon-box .scroll-view-item_H {
  margin-right: 30rpx;
  width: 228rpx;
  height: 153rpx;
  flex-shrink:0;
  flex-grow:0;
}

.tpl-coupon-box .image {
  width: 100%;
  height: 100%;
}