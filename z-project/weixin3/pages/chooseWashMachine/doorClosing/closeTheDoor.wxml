         <view class="iconText">不可水洗衣物</view>
      </view>
      <view class="iconTip">
         <image src="https://static.qiekj.com/alipay/clothes.png" class="iconImg" mode="scaleToFill"/>
         <view class="iconText">勿洗</view>
         <view class="iconText">贵重衣物</view>
      </view>
   </view>

   <view class="pge-closeDoor-btn" catchtap="closeTheDoor">已关门<text class="iconfont icon-nextx"></text></view>
   <view class="desc">支付成功后，将自动开始洗涤</view>
</view>