     <image class="washImg1" src="https://static.qiekj.com/gif/washMx1.jpg" mode="scaleToFill" /> 
      <!-- 动画图片 --> 
      <image class="washImg" src="https://static.qiekj.com/gif/washMXbg1597635043329.gif" mode="scaleToFill" /> 
      <!-- 圆角背景 -->
