.water-wrapper {
  width: 100vw;
  height: 100vh;
  background-color: #f9f9f9;
  padding: 156rpx 0 0;
}
.water-content {
  width: 100%;
  height: 100%;
}
.water-wrapper .logo-label{
  position: fixed;
  left: 50rpx;
  top: 46rpx;
  width: 260rpx;
  height: 90rpx;
}
.water-wrapper .logo-label image{
  width: 100%;
  height: 100%;
}

/* 解锁过渡页 */

.water-con {
  width: 100%;
  height: 100%;
  background-color: #fff;
  position: relative;
  padding-top: 74rpx;
  border-radius: 40rpx 40rpx 0 0;
}
.schematic_pic-box {
  width: 590rpx;
  height: 154rpx;
  margin: 108rpx auto 0;
}
.water-con .schematic_pic {
  width: 590rpx;
  height: 154rpx;
}
.water-icon {
  width: 362rpx;
  height: 270rpx;
  margin: 0 auto;
}
.water-con image{
  width: 100%;
  height: 100%;
}
.water-con .shop-address {
  color: #666666;
  font-size: 28rpx;
  margin-top: 18rpx;
  text-align: center;
  margin-bottom: 58rpx;
}
.water-con .machine-infomation{
  display: flex;
  align-items: center;
  justify-content: center;
}
.water-con .machine-infomation .collection-label{
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 16rpx;
  color: #2088FF;
  height: 48rpx;
  padding: 0 18rpx;
  border: 2rpx solid #2088FF;
  border-radius: 28rpx;
}
.water-con .machine-infomation .collection-label text{
  font-size: 28rpx;
  line-height: 40rpx;
  margin-left: 4rpx;
}
.water-con .machine-infomation .collection-label .iconfont{
  font-size: 22rpx;
}
.vip-wrapper .machine-infomation .collection-label{
  color: #795420 !important;
  border-color: #795420 !important;
}
.water-con .shop-name {
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 44rpx;
  line-height: 62rpx;
  font-weight: bold;
  text-align: center;
  color: #333;
}
.water-con .water-price {
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: top;
  height: 90rpx;
  margin-bottom: 30rpx;
}
.water-price .title {
  color: #333;
  line-height: 50rpx;
}
.price-wrap {
  text-align: left;
}
.price-wrap .discount-price {
  position: relative;
  color: #f04864;
  font-size: 0.36rem;
  line-height: 0.48rem;
}
.discount-price .small {
  font-size: 0.32rem;
}
.price-wrap .price {
  position: relative;
  font-size: 0.24rem;
  line-height: 0.48rem;
  margin-left: 4rpx;
}
.price-wrap .price .small {
  font-size: 0.24rem;
}
.discount-tag {
  position: absolute;
  top: 6rpx;
  left: -90rpx;
  width: 72rpx;
  height: 0.3rem;
  text-align: center;
  border: 2rpx solid #ff6f6f;
  border-radius: 20rpx;
  color: #ff6f6f;
  font-size: 24rpx;
  line-height: 30rpx;
  font-weight: normal;
}
.discount-tag.vip-tag {
  border-color: #e29000;
  color: #e29000;
}
.discount-tag.gray {
  border-color: #ccc;
  color: #999;
}
