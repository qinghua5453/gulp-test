.list-wrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 15rpx;
}
.list-wrap .item {
  width: 100%;
  height: 200rpx;
  position: relative;
}
.item .list-con {
  padding: 5rpx 20rpx;
}
.item .list-one {
  padding: 5rpx 100rpx !important;
}
.item .number {
  width: 100%;
  text-align: center;
  padding: 32rpx 0;
  color: #333;
  font-size: 38rpx;
  line-height: 66rpx;
  font-weight: bold;
  box-shadow: 0 6rpx 16rpx 0 rgba(39, 140, 255, 0.2);
  border-radius: 20rpx;
}
.item .status {
  font-size: 20rpx;
  color: #ccc;
  text-align: center;
  position: absolute;
  left: 50%;
  bottom: 5rpx;
  transform: translate(-50%);
}
.item .using {
  position: absolute;
  left: 50%;
  bottom: 5rpx;
  transform: translate(-50%);
  width: 112rpx;
  height: 37rpx;
  background-image: url('https://static.qiekj.com/h5/water/water_using.png');
  background-size: cover;
}
.item.active .list-con {
  padding: 0 15rpx;
}
.item.active .number {
  padding: 38rpx 0;
  font-size: 48rpx;
  background: linear-gradient(
    228deg,
    rgba(84, 167, 255, 1) 0%,
    rgba(43, 142, 255, 1) 100%
  );
  box-shadow: 0 6rpx 16rpx 0 rgba(39, 140, 255, 0.6);
  color: #fff;
}
.item.gray .number {
  background-color: #f9f9f9;
  box-shadow: none;
  color: #ccc;
}
.footer-btn-wrapper {
  position: fixed;
  left: 20rpx;
  bottom: 20rpx;
}
.footer-btn-wrapper .status-desc {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 0.16rem;
  text-align: center;
}
.btn-wrapper {
  width: 710rpx;
}
.no-border {
  border: none !important;
  border-radius: 0% !important;
  background-color: transparent !important;
}
.btn-wrapper .ble-btn {
  text-align: center;
  font-size: 32rpx;
  color: #333;
  padding: 19rpx 0 12rpx;
}
.btn-wrapper .ble-btn .iconfont {
  color: #ccc;
  margin-right: 20rpx;
}
.choose-btn {
  width: 100%;
  background-color: #fff;
  border-radius: 50rpx;
  box-shadow: 0 0 20rpx 0 rgba(229, 229, 229, 1);
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.btn-wrapper .choose-water {
  font-size: 32rpx;
  color: #333;
  padding-left: 65rpx;
}
.btn-wrapper .use-btn {
  width: 356rpx;
  background-color: #2088ff;
  text-align: center;
  line-height: 88rpx;
  border-radius: 44rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
}
.btn-wrapper .use-btn.btn-gray {
  background-color: #ccc !important;
  color: #fff !important;
}
.water-wrapper.vip-wrapper .vip-card {
  background-image: url(https://static.qiekj.com/h5/miniApp/machine/xf_vip.png);
}
.water-wrapper.vip-wrapper .water-icon {
  background-image: url('https://static.qiekj.com/h5/water/waterMachine_vip.png');
}
.water-wrapper.vip-wrapper .item .number {
  box-shadow: 0 6rpx 16rpx 0 rgba(255, 191, 0, 0.2);
  color: #795420;
}
.water-wrapper.vip-wrapper .item.active .number {
  background: rgba(255, 227, 142, 1);
  box-shadow: 0 6rpx 16rpx 0 rgba(255, 191, 0, 0.6);
  color: #795420;
  border: 2rpx solid rgba(255, 212, 82, 1);
}
.water-wrapper.vip-wrapper .item.gray .number {
  box-shadow: none;
}
.water-wrapper.vip-wrapper .btn-wrapper .use-btn {
  background-color: #ffdf7f;
  color: #663f09;
}
.water-wrapper.vip-wrapper .btn-wrapper {
  background-color: #fff8e4;
  border: 1rpx solid #ffdf7f;
}
