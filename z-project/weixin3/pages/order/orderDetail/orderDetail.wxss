@import './acss/tpl-order-info.wxss';

.pge-orderDetail-wrapper{
  position: relative;
  width: 100vw;
  height: 100vh;
  background: #F4F5F7;
}
.pge-order-detail-y{
  width: 100%;
  padding: 16rpx 24rpx 10rpx;
}
.pge-order-detail-y .pge-order-machine-discount{
  margin-top: 16rpx;
}
.pge-order-machine-discount .pge-order-show-more{
  height: 110rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #999;
  background: #fff;
  border-radius: 0 0 28rpx 28rpx;
  margin-top: -20rpx;
}
.pge-order-show-more .transf90{
  transform: rotate(180deg);
  font-size: 24rpx;
  margin-left: 10rpx;
}
.pge-order-service {
  margin-top: 16rpx;
}
.customer-service-tips{
  position: fixed;
  left: 0;
  bottom: 82rpx;
  width: 100%;
  text-align: center;
  color: #ccc;
  font-size: 28rpx; 
}
.pge-order-footer-desc-text {
  height: 34rpx;
  font-size: 24rpx;
  font-weight: 400;
  font-size: 28rpx;
  text-align: center;
  color: rgba(204, 204, 204, 1);
  line-height: 34rpx;
  margin-bottom: 82rpx;
}
.pge-call{
  margin-left: 10rpx;
}