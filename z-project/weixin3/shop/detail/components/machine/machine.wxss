@import '/common/iconfont/iconfont.wxss'; 
@import '/common/reset.wxss'; 
@import '/common/btn-common.wxss';
.cmp-shop-reserve-list {
  margin-top: 34rpx;
  width: 750rpx;
  background: rgba(255, 255, 255, 1);
  border-top-left-radius: 28rpx;
  border-top-right-radius: 28rpx;
  padding: 36rpx 32rpx 24rpx 34rpx;
}

.cmp-shop-reserve-list .cmp-reserve-tit {
  margin-left: 30rpx;
  margin-bottom: 30rpx;
}

.cmp-shop-reserve-list .cmp-reserve-li {
  margin-bottom: 28rpx;
  display: flex;
  justify-content: space-between;
  width: 684rpx;
  height: 132rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 28rpx;
  border: 2rpx solid rgba(238, 238, 238, 1);
  align-items: center;
  padding: 0 22rpx 0 32rpx;
}

.cmp-shop-reserve-list .cmp-reserve-li .li-lef-part {
  flex: 1;
  display: flex;
  align-items: center;
}

.cmp-shop-reserve-list .cmp-reserve-li .image-icon {
  width: 68rpx;
  height: 68rpx;
}

.cmp-shop-reserve-list .cmp-reserve-li .lef-tit-infor {
  margin-left: 22rpx;
}

.cmp-shop-reserve-list .cmp-reserve-li .lef-tit {
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 44rpx;
  height: 44rpx;
  display: block;
}

.cmp-shop-reserve-list .cmp-reserve-li .lef-num {
  height: 34rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 34rpx;
}

.cmp-shop-reserve-list .cmp-reserve-li .li-rig-btn {
  width: 146rpx;
  height: 72rpx;
  /* background: rgba(24, 125, 255, 1); */
  /* box-shadow: 0px 4rpx 8rpx 0px rgba(24, 125, 255, 0.3); */
  border-radius: 36rpx;
  line-height: 72rpx;
  text-align: center;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}