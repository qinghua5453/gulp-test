.tpl-input-wrapper{
    min-height: 280rpx;
    position: relative;
    color: #999999;
    font-size: 28rpx;
    font-weight:400;
    margin: 26rpx 24rpx;
    padding-bottom: 26rpx;
}
.tpl-font-limit{
	position: absolute;
	bottom: 0rpx;
	right: 0;
    color: #999999;
}
textarea{
    padding: 0;
}
.tpl-placeholderClass{
    color: #CCCCCC;
    font-size: 32rpx;
}
.tpl-btn-wrapper button{
    width: 640rpx;
    height: 98rpx;
    line-height: 98rpx;
    margin: 48rpx auto 0;
    text-align: center;
    background: #1677FF;
    color: #fff;
    border-radius: 44rpx;
}
.tpl-btn-wrapper button.activeName{
    background: #1677FF;
}