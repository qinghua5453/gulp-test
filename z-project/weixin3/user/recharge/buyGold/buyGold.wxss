@import './acss/tpl-item.wxss';
@import './acss/tpl-items.wxss';
@import './acss/tpl-tips.wxss';
.pge-byu-gold{
  width: 100vw;
  height: 100vh;
  background: #ffffff;
}
.pge-byu-gold .pge-tokencoin-bg{
  width: 100%;
  height: 212rpx;
  background: url(https://static.qiekj.com/h5/alipay/buyTokenCoin/gold-bg.png) no-repeat;
  background-size: 100%;
}
.pge-byu-gold .pge-tokencoin-content{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  padding: 238rpx 24rpx 260rpx;
}
.pge-byu-gold .pge-bottom-wrapper{
  position: fixed;
  left: 50%;
  transform: translate(-50%,0%);
  bottom: 30rpx;
  text-align: center;
  width: 100%;
}
.pge-bottom-wrapper .pge-tokencoin-tips{
  font-size: 24rpx;
  margin-bottom: 16rpx;
}
.pge-byu-gold .pge-bottom-wrapper .pge-btn-buy-gold{
  width: 702rpx;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #1677FF;
  color: #ffffff;
  border-radius: 62rpx;
  margin: 0 auto;
  font-size: 36rpx;
}
.pge-byu-gold .pge-bottom-wrapper .pge-btn-gray{
  background-color: #CCCCCC;
}
.pge-byu-gold .pge-bottom-wrapper .pge-gold-protocol{
  margin-top: 16rpx;
  color: #999999;
  font-size: 24rpx;
}
.pge-activity-fail-wrapper{
  width: 100%;
  height: 100%;
  background-color: #ffffff;
  position: relative;
}
.pge-byu-gold .pge-bottom-wrapper .pge-active{
  color: #2088FF;
}
.pge-byu-gold .pge-activity-fail{
  position: absolute;
  top:50%;
  left:50%;
  transform:translate(-50%,-50%);
}
.pge-byu-gold .pge-activity-fail image{
  width: 400rpx;
  height: 260rpx;
  margin: 0 auto;
}
.pge-byu-gold .pge-activity-fail .pge-info{
  font-size: 32rpx;
  color: #333333;
  text-align: center;
  margin-top: 62rpx;
}