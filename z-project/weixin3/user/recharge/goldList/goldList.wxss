@import './acss/tpl-pop.wxss';
.pge-gold-list{
  width: 100%;
  height: 100vh;
  padding-top: 84rpx;
  background: #fff;
}
.pge-gold-list .pge-rule-desc{
  position: absolute;
  right: .52rem;
  top: 0;
  display: flex;
	align-items: center;
  height: 84rpx;
  font-size: 28rpx;
  color: #333333;
} 
.pge-gold-list_body{
  width: 710rpx;
	margin-left: 20rpx;
  height: 100%;	
  overflow: hidden;
}
.pge-gold-list-con{
  width: 100%;
  max-height: 100%;
}
.pge-gold-list-con .pge-no-more{
  text-align: center;
  color: #C2C6DA;
  padding:40rpx 0;
}

.pge-gold-list .pge-rule-desc-pop{
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 1000;
  background-color: rgba(0,0,0,.5);
}
.pge-list-none{
    position: fixed;
    top:50%;
    left:50%;
    transform:translate(-50%,-50%);
    color: #C2C6DA;
}