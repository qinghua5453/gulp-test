@import '/common/iconfont/iconfont.wxss'; 
@import '/common/reset.wxss'; 
@import '/common/btn-common.wxss';
.cmp-item-view{
	width: 100%;
    margin-top: 30rpx;
    box-shadow:0 6rpx 10rpx 0 rgba(231,233,241,1);
    border-radius:10rpx;
    position: relative;
}
.cmp-coupon-detail{
    display: flex;
    align-items: center;
    padding: 33rpx 0 14rpx;
    background: #ffffff;
}
.cmp-coupon-price{
    width: 223rpx;
    border-right: 2rpx dotted #e8e8e8;  
    height: 110rpx; 
    text-align: center;
}
.cmp-price-wrapper .cmp-price{
    font-size: 60rpx;
    color: #F04864;
    line-height: 80rpx;
    height: 80rpx;
    text-align: center;
    margin-left: -20rpx;
}
.cmp-price-wrapper .cmp-price .cmp-small{
    font-size: 32rpx;
}
.cmp-price-wrapper .cmp-priceDecimal{
		font-size:46rpx;
}
.cmp-price-wrapper .cmp-price-limit{
    font-size: 20rpx; 
}  
.cmp-coupon-price .cmp-free image{
    width: 61rpx;
    margin-top: 10rpx;
}
.cmp-coupon-content{
    width: 450rpx;
		padding-left: 35rpx;
}
.cmp-coupon-content .cmp-name{
    font-size: 32rpx;
    line-height: 45rpx;
    font-weight: bold;   
}
.cmp-coupon-content .cmp-mode-limit,.cmp-coupon-content .cmp-time{
    font-size: 22rpx;
    line-height: 30rpx;
    color: #999999;
    margin: 6rpx 0 4rpx;
		padding-right: 30rpx;
		overflow: hidden;
		text-overflow: ellipsis;
		white-space: nowrap;
}
.cmp-item-view .cmp-limit{
		width: 100%;
    background-color: #fbfbfb;
		padding: 20rpx 30rpx 20rpx 65rpx;
    line-height: 30rpx;
    color: #999999;
    font-size: 22rpx;
		position: relative;
}
.cmp-limit .cmp-hide{
	width: 100%;
	padding-right: .6rem;	
}
.cmp-limit .cmp-hide view{
	width: 100%;
	overflow: hidden;
	text-overflow:ellipsis;
	white-space: nowrap;
}
.cmp-limit .icon-nextx{
	font-size: 19rpx;
	position: absolute;
	top: 20rpx;
	right: 65rpx;
	color: #D1D1D6;
}
.cmp-limit .icon-nextx.cmp-active{
	transform: rotate(90deg);
}
.cmp-radius-bg{
    position: absolute;
    width: 26rpx;
    height: 26rpx;
    background-color: #f8f8f8;
    border-radius: 50%;
    top: 155rpx;
    left: 0;
    transform: translate(-50%);
    box-shadow: -20rpx -10rpx 40rpx -26rpx #eee inset;
}
.cmp-radius-bg.cmp-right{
    left: auto;
    right: 0;
    transform: translate(50%);
    box-shadow: 20rpx -10rpx 40rpx -26rpx #eee inset;
}
.cmp-choose-coupon.iconfont{
	position: absolute;
	font-size: 44rpx;
	color: #CCCED7;
	right: 60rpx;
	top: 62rpx;
}
.cmp-choose-coupon.icon-xuanzhongx{
	color: #FF4C6A;
}
.cmp-choose-coupon.icon-norx1{
  color: #CCCCCC;
}