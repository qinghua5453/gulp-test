.cmp-address-item .discount-box {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  margin-top: 18rpx;
}

.cmp-address-item .time-sale {
  border-radius:4rpx;
  border:2rpx solid rgba(255,165,180,1);
  margin-right: 10rpx;
  padding: 0 8rpx;
  color:#FF6F6F;
}

.cmp-address-item .discount-used-btn-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.cmp-address-item .mem-sale {
  border-radius:4rpx;
  border:2rpx solid rgba(255,214,91,1);
  padding: 0rpx 8rpx;
  color:#FFD65B;
}

.cmp-address-item .can-use-btn {
  /* position: absolute;
  z-index: 10;
