.cmp-address-box {
  margin: 0 auto;
  width: 710rpx;
  margin-bottom: 40rpx;
}

.cmp-address-box .cmp-address-item {
  background:rgba(255,255,255,1);
  border-radius:20rpx;
  margin-bottom: 12rpx;
  padding:32rpx 30rpx 28rpx 30rpx;
  position: relative;
}

.cmp-address-item .address-tit {
  font-size:32rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:44rpx;
  margin-bottom: 16rpx;
}

.cmp-address-item .gender{
  padding-right:16rpx; 
}

.cmp-address-item .male{
    color: #2088FF
}

.cmp-address-item .female{
    color: #FF6F6F
}

.cmp-address-item .secret-gender{
    color:#FFA200
}

.cmp-address-item .address-sub {
  margin-bottom: 14rpx;
  display: flex;
  /* align-items: center; */
  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:34rpx;
}

.cmp-address-item .sub-tit {
  width:525rpx;
}

.cmp-address-item .sub-dis {
  flex:1;
  text-align: right;
}

.cmp-address-item .used-status {
  display: flex;
  align-items: center;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  font-size:24rpx;
}

.cmp-address-item .used-num {
  color:rgba(32,136,255,1);
  height: 45rpx;
  padding: 0 10rpx;
  background:rgba(32,136,255,0.1);
  border-radius:8rpx;
  margin-right: 10rpx;
  line-height: 45rpx;
}

