@import '/common/iconfont/iconfont.wxss'; 
@import '/common/reset.wxss'; 
@import '/common/btn-common.wxss';
.cash-envelope-wrapper{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,.5);
  z-index: 1002;
}
.cash-body{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: auto;
  z-index: 1005;
}
.cash-use{
  width: 708rpx;
  height: 772rpx;
  margin: 228rpx auto 0;
}
.cash-use-again{
  position: relative;
  width: 708rpx;
  height: 782rpx;
  margin: 228rpx auto 0;
}
.red-envelope-bg{
  width: 708rpx;
  height: 782rpx;
  background-image: url(https://static.qiekj.com/h5/activity/scan_again_popup.png);
  background-size: cover;
}
.cash-use-again .remainFund{
  position: absolute;
  top: 216rpx;
  left: 50%;
  margin-left: -218rpx;
  text-align: center;
  width: 436rpx;
  font-size: 80rpx;
  line-height: 112rpx;
  color: #fff;
  font-weight: 600;
}
.remainFund .unit{
  font-size: 34rpx;
}

.cash-envelope-wrapper .btn-delete{
  width: 64rpx;
  height: 64rpx;
  margin: 40rpx auto 0;
  background: url('https://static.qiekj.com/h5/modalDel.png');
  background-size: cover;
}
.progress-box{
  position: absolute;
  bottom: 330rpx;
  left: 50%;
  margin-left: -260rpx;
  width: 520rpx;
  height: 34rpx;
  background-image: url(https://static.qiekj.com/h5/activity/progress_bg.png);
  background-size: cover;
}
.progress-box .run{
  position: absolute;
  left: 0%;
  width: 100%;
  height: 100%;
  background:rgba(255,250,243,1);
  border-radius: 17rpx;
}
.progress-box .add-border{
  border-radius: 0 17rpx 17rpx 0;
}
.progress-box .border-node{
  height: 0 !important;
}
.order-information{
  position: absolute;
  bottom: 264rpx;
  left: 180rpx;
  display: flex;
  align-items: center;
  color: #fff;
  font-size: 28rpx;
}
.order-information .order-icon{
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  height: auto;
  background-color: #FFA97F;
  border-radius: 8rpx;
  text-align: center;
  color: #663F09;
  font-size: 36rpx;
  margin: 0 8rpx;
}
.order-information .orders-item{
  display: flex;
  align-items: flex-end;
  letter-spacing: 4rpx;
}
.order-information .remain-orders{
  margin-left: 12rpx;
}
.activity-ends-box{
  position: relative;
  width: 600rpx;
  height: auto;
  margin: 280rpx auto 0;
  background-color: #fff;
  border-radius: 20rpx;
  padding-bottom: 66rpx;
}
.activity-ends-box .ends-pic{
  width: 100%;
  height: 438rpx;
}

.activity-ends-box .ends-content{
  margin-top: 20rpx;
  text-align: center;
  color: #333333;
}
.ends-content .desc{
  font-size: 34rpx;
  line-height: 48rpx;
  font-weight: 600;
}
.ends-content .text{
  font-size: 28rpx;
  line-height: 40rpx;
  font-weight: 400;
  margin-top: 16rpx;
}
.ends-content .btn-end{
  width: 330rpx;
  height: 80rpx;
  background-color: #2088FF;
  line-height: 80rpx;
  border-radius: 40rpx;
  color: #fff;
  font-size: 34rpx;
  text-align: center;
  margin: 32rpx auto 0;
}