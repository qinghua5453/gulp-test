@import '/common/iconfont/iconfont.wxss'; 
@import '/common/reset.wxss'; 
@import '/common/btn-common.wxss';
.cmp-gold-item{
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom: 2rpx solid #F9F8FF;
  padding: 23rpx 0;
}
.cmp-gold-item .cmp-shop-info{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.cmp-gold-item .cmp-price-info{
  margin-top: 10rpx;
}
.cmp-gold-item:last-child{
  border: none!important;
}
.cmp-gold-item .cmp-operating{
  font-size: 32rpx;
  color: #333333;
  height: 44rpx;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 400rpx;
}
.cmp-gold-item .cmp-shop-name{
  font-size: 28rpx;
  color: #999999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 320rpx;
}
.cmp-gold-item .cmp-price{
  font-size: 36rpx;
  height: 40rpx;
  margin-bottom: 12rpx;
  text-align: right;
}
.cmp-gold-item .cmp-time{
  font-size: 28rpx;
  color: #999999;
}

.cmp-add .cmp-operating{
  color: #2088FF !important;
}
.cmp-add .cmp-price{
  color: #2088FF !important;
}