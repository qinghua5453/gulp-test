.vip-type{
	width: 690rpx;
  margin: 0 auto 40rpx;
	display: flex;
	align-items: center;
}
.vip-type .vip-item{
	width: 220rpx;
	height: 264rpx;
	border-radius: 32rpx;
	border: 1px solid #FFD26B;
	text-align: center;
	position: relative;
	margin-right: 20rpx;
  background: #FFF7E6;
	overflow: hidden;
}
.vip-type .vip-item:last-child{
	margin-right: 0;
}
.vip-item .tpl-vip-item-month{
	height: 102rpx;
	line-height: 102rpx;
	background:#FFF7E6;
	color: #000000;
	font-size: 28rpx;
	border-bottom: 1px solid #FFDF96;
}
.vip-item .tpl-vip-item-price{
	text-align: center;
	margin-top: 36rpx;
	line-height: 40rpx;
	font-size: 48rpx;
}
.tpl-vip-item-price text{
	font-size: 28rpx;
}
.vip-item.active{
	border: 3px solid #FFD474;
}
.vip-item .tag{
	font-size: 12px;
	color: #fff;
	background-color:#F04864;
	width: 35px;
	text-align: center;
	border-radius: 0 4px 0 4px;
  padding: 1px 0;
	position: absolute;
	right: 0;
	top: -18rpx;
}
.vip-item .month{
	font-size: 32rpx;
	line-height: 45rpx;
	margin-top: 47rpx;
}
.vip-item .price{
	font-size: 36rpx;
	line-height: 50rpx;
	margin-top: 29rpx;
}
.vip-item.active .price{
	font-weight: bold;
}
.active .tpl-vip-item-month{
	background:linear-gradient(239deg,rgba(255,226,158,1) 0%,rgba(255,210,107,1) 100%);
}
.active .tpl-vip-item-price{
	background: #FFF3E5;
}
