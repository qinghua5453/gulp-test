.bottom-wrapper {
    width: 710rpx;
    height: 124rpx;
    position: fixed;
    bottom: 20rpx;
    left: 20rpx;
}

.use-immediate-box {
    display: flex;
    align-items: center;
    height: 124rpx;
    border-radius: 64rpx;
    background-color: #fff;
}

.price-con-wrapper {
    display: flex;
    flex-direction: column;
    margin-left: 60rpx;
}

.footer-price {
    font-size: 40rpx;
    color: #333333;
    line-height: 56rpx;
    font-weight: bold;
}

.footer-price .currency {
    font-size: 38rpx;
    margin-right: 8rpx;
}

.footer-price .currency-small {
    margin-left: 20rpx;
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(51, 51, 51, 1);
    height: 40rpx;
    line-height: 40rpx;
    text-decoration: line-through;
}

.footer-mode-type {
    width: 270rpx;
    height: 34rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-weight: 400;
    line-height: 34rpx;
    font-size: 24rpx;
    color: #333333;
}

.footer-btn {
    display: flex;
    align-items: center;
}

.footer-btn-group {
    display: flex;
    width: 362rpx;
    text-align: center;
    justify-content: space-around;
    font-size: 32rpx;
    height: 100rpx;
    line-height: 100rpx;
}

.footer-btn-group .btn-left {
    width: 176rpx;
    background-color: rgba(22, 119, 255, 1);
    font-weight: bold;
    color: #FFFFFF;
    border-radius: 200rpx 16rpx 16rpx 200rpx;
}

.warm .footer-btn-group .btn-left {
    background-color: rgba(255, 139, 54, 1);
}

.footer-btn-group .btn-right {
    width: 176rpx;
    background-color: rgba(255, 210, 107, 1);
    border-radius: 16rpx 200rpx 200rpx 16rpx;
    font-weight: bold;
    color: rgba(0, 0, 0, 0.9);
}

.footer-btn .btn-one-use,
.footer-btn .btn-two-use {
    height: 100rpx;
    text-align: center;
    background-color: #1677FF;
    color: #ffffff;
    font-size: 32rpx;
    border-radius: 50rpx;
    font-weight: bold;
}

.warm .footer-btn .btn-one-use,
.warm .footer-btn .btn-two-use {
    background-color: rgba(255, 139, 54, 1);
}

.footer-btn .btn-one-use {
    line-height: 100rpx;
    width: 260rpx;
    margin-left: 100rpx;
}

.footer-btn .btn-two-use {
    width: 310rpx;
    margin-left: 50rpx;
}

.footer-btn .btn-two-use .text {
    padding-top: 10rpx;
    height: 44rpx;
    line-height: 44rpx;
    font-size: 32rpx;
    font-weight: bold;
}

.footer-btn .btn-two-use .desc {
    padding-top: 10rpx;
    height: 34rpx;
    line-height: 34rpx;
    font-size: 24rpx;
    font-weight: 400;
}