.ImgPosition {
    width: 750rpx;
    height: 828rpx;
    z-index: 80;
    position: relative;
    background-color:#2767EA;
}
.pge-wash-tips{
    background-color: #FFFFFF;
}

.ImgPosition .washImg,
.ImgPosition .washImg1 {
    width: 100vw;
    height: 928rpx;
    position: absolute;
    z-index: 2;
    top:-100rpx;
    left: 3rpx;
}

.wash_bg {
    width: 750rpx;
    height: 197rpx;
    position: absolute;
    top: 633rpx;
    left: 0;
    z-index: 10;
}

.tipText {
    position: absolute;
    z-index: 100;
    top: 110rpx;
    left: 0;
    width: 100%;
    text-align: center;
    height: 60rpx;
    font-size: 44rpx;
    font-weight: bold;
    color: rgba(255, 255, 255, 1);
    line-height: 60rpx;
}

.pge-closeDoor-btn {
    width: 360rpx;
    height: 100rpx;
    line-height: 100rpx;
    background: rgba(22, 119, 255, 1);
    box-shadow: 0rpx 4rpx 18rpx 0rpx rgba(100, 146, 252, 0.5);
    color: #ffffff;
    font-size: 36rpx;
    font-weight: bold;
    border-radius: 62rpx;
    text-align: center;
    margin: 0 auto;
    margin-top: 50rpx;
}

.desc {
    width: 100%;
    text-align: center;
    margin-top: 20rpx;
    font-size: 28rpx;
    font-weight: 400;
    height:40rpx;
    background-color:#ffffff;
    color: rgba(153, 153, 153, 1);
}

.icon_tips {
    display: flex;
    justify-content: space-around;
}

.iconTip {
    width: 148rpx;
    text-align: center;
    margin-top: 40rpx;
}

.iconImg {
    width: 64rpx;
    height: 64rpx;
}

.iconTip .iconText {
    font-size: 24rpx;
    font-weight: 400;
    color: rgba(22, 119, 255, 0.5);
    line-height: 28rpx;
}