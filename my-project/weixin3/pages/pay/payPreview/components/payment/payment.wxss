@import '/common/iconfont/iconfont.wxss'; 
@import '/common/reset.wxss'; 
@import '/common/btn-common.wxss';
.cmp-preview-payment-wrapper{
    position: fixed;
    bottom: 30rpx;
    left: 32rpx; 
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 686rpx;
    height: 124rpx;
    margin: 6rpx auto 0;
    background-color: #fff;
    box-shadow:0 8rpx 16rpx 0 rgba(235,241,251,1);
    border-radius:64rpx;
    border:1px solid rgba(245,245,245,1);
}
.cmp-preview-payment-wrapper .cmp-payment-price{
    margin-left: 40rpx;
    font-size: 28rpx;
}
.cmp-payment-price .price{
    font-size: 40rpx;
    font-weight: bold;
}
.cmp-btn-preview-payment{
    display: flex;
    justify-content: center;
    align-items: center;
    margin-right: 12rpx;
}
.cmp-btn-preview-payment .cmp-btn-pay{
    display: flex;
    align-items: center;
    justify-content: center;
    width: 176rpx;
    height: 100rpx;
    background-color: #1677FF;
    border-radius: 200rpx 8rpx 8rpx 200rpx;
    text-align: center;
    color: #fff;
}
.cmp-btn-pay text{
    font-size: 28rpx;
    font-weight: bold;
}
.cmp-btn-pay .pay_loading{
    width: 30rpx;
    height: 30rpx;
    background-image: url(https://static.qiekj.com/gif/pay_loading.gif);
    background-size: 100%;
}
.cmp-btn-preview-payment .cmp-btn-yunma{
    width: 176rpx;
    height: 100rpx;
    background: linear-gradient(270deg,rgba(255,64,66,1) 0%,rgba(255,80,81,1) 100%);
    border-radius: 8rpx 200rpx 200rpx 8rpx;
    margin-left: 8rpx;
    padding: 12rpx 22rpx 12rpx 14rpx;
    color: #FFEEC7;
}
.cmp-btn-yunma .title{
    font-size: 32rpx;
    background-image: url(https://static.qiekj.com/h5/yunma/gold_icon.png);
    background-size: 38rpx 38rpx;
    background-repeat: no-repeat;
    font-weight: bold;
    line-height: 44rpx;
    padding-left: 40rpx;
}
.cmp-btn-yunma .discount-price{
    font-size: 24rpx;
}
.cmp-no-btn-preview-payment{
    width: 292rpx;
    height: 100rpx;
    background-color: #1677FF !important;
    border-radius: 64rpx; 
    display: flex;
    justify-content: center;
    align-items: center;
    margin-right: 12rpx;
}
.cmp-no-btn-preview-payment .pay_loading{
    width: 50rpx;
    height: 50rpx;
    background-image: url(https://static.qiekj.com/gif/pay_loading.gif);
    background-size: 100%;
}
.cmp-no-btn-preview-payment .btn-left{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.cmp-no-btn-preview-payment .cmp-pay-title{
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 32rpx;
    font-weight: 500;
    color: #fff;
}
.cmp-pay-title text{
    margin-left: 10rpx;
}
.cmp-pay-title .iconfont{
    font-size: 24rpx;
}
.cmp-no-btn-preview-payment .discount-text{
    color: #FFE3A4;
    font-size: 24rpx;
    margin-top: 8rpx;
}
.cmp-preview-payment-wrapper .cmp-task-tips{
    position: absolute;
    top: -90rpx;
    right: 12rpx;
    font-size: 24rpx;
    color: #EF5657;
    width: 290rpx;
    height: 68rpx;
    line-height: 58rpx;
    background: url('https://static.qiekj.com/h5/yunma/task_bg.png');
    background-size: 100% 100%;
    text-align: center;
}
.pge-unimakt-gold-popup{
  position: fixed;
  top: 272rpx;
  left:50%;
  transform:translate(-50%,0);
  width: 360rpx;
  height: 340rpx;
  background:rgba(0,0,0,0.5);
  border-radius: 28rpx;
  color: #fff;
  font-size: 28rpx;
  line-height: 44rpx;
  text-align: center;
}
.pge-unimakt-gold-popup .gold-pic{
  width: 146rpx;
  height: 118rpx;
  margin: 50rpx 86rpx 28rpx 128rpx;
  background: url('https://static.qiekj.com/h5/yunma/gold_pic.png');
  background-size: 100% 100%;
}
.cmp-unimkt-tips{
  position: absolute;
  top: -68rpx;
  right: 38rpx;
}
.cmp-unimkt-tips .cmp-triangle{
  position: absolute;
  left: 50%;
  transform: translate(-50% 0);
  bottom: -10rpx;
  width: 0;
  height: 0;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-top: 10rpx solid #FFCCCC;
}
.cmp-unimkt-tips .cmp-tips-text-box{
    font-size: 24rpx;
    color: #EF5657;
    width: 180rpx;
    height: 62rpx;
    background: #FFCCCC;
    line-height: 62rpx;
    text-align: center;
    border-radius: 15rpx;
}
.cmp-tips-text-box .unimkt-time{
    display: inline-block;
    margin-left: 5rpx;
}