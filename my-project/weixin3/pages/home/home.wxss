@import './acss/tpl-scan.wxss';

.pge-home-wrapper {
  width: 100%;
}

.pge-home-body {
  width: 100%;
  height: auto;
  background: #F7F7F7;
}

.pge-store-box .nearbylist-box .nomore {
  display: flex;
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  color: rgb(186, 186, 189);
  justify-content: center;
  padding: 50rpx 0;
}

.pge-store-box .pge-store-null {
  text-align: center;
  width: 100%;
  margin-top: 132rpx;
  padding-bottom: 110rpx;
}

.pge-store-null image{
  vertical-align: top;
  margin-bottom: 16rpx;
  width: 68rpx;
  height: 64rpx;
}
.pge-store-null .null-msg{
  font-size: 28rpx;
  color: #CCCCCC;
  text-align: center;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  line-height:40rpx;
}
.pge-location-tit {
  margin-bottom:20rpx;
  font-size: 36rpx;
}
.pge-location-content {
  line-height: 1.6;
}
.pge-modal-footer {
	position: relative;
	height: 50px;
	color: #1677ff;
	color: var(--am-color-text-primary,#1677ff);
	text-align: center;
	font-size: 18px;
	font-size: var(--am-modal-footer-fontSize,18px);
	line-height: 50px;
}

.pge-modal-footer::before {
	position: absolute;
	top: 0;
	right: 0;
	bottom: auto;
	left: 0;
	display: block;
	height: 1px;
	background-color: #e5e5e5;
	content: '';
	transform: scaleY(.5);
}

/* 广告系统  捡漏*/
.pge-pick-up-box {
  margin-top: 20rpx;
  background: #fff;
  padding:32rpx 68rpx 32rpx 50rpx;
  width: 750rpx;
}

.pge-pick-up-box .title{
  font-size:32rpx;
  font-family:PingFangSC-Semibold,PingFang SC;
  font-weight:600;
  color:rgba(51,51,51,1);
  line-height:44rpx;
  margin-bottom: 12rpx;
}

.pge-pick-up-box .adver-box {
  display: flex;
  flex-wrap: wrap;
}

.pge-pick-up-box .adver-box-in {
  flex:1;
  height: 130rpx;
  padding-left: 18rpx;
  position: relative;
}
  
.pge-pick-up-box .adver-box-in:nth-child(2n) {
  /* text-align: right; */
  padding-left: 130rpx;
}

/* 广告系统秒杀 */
.pge-seckill-box {
  margin-top: 20rpx;
  background: #fff;
  width: 750rpx;
  padding: 32rpx;
}

.pge-seckill-box .title {
   font-size:32rpx;
   font-family:PingFangSC-Medium,PingFang SC;
   font-weight:500;
   color:rgba(51,51,51,1);
   line-height:44rpx;
   margin-bottom: 32rpx;
}

.pge-seckill-box .swiper-box {
  position: relative;
  width:686rpx;
  height:190rpx;
  overflow: hidden;
  border-radius:20rpx;
}
