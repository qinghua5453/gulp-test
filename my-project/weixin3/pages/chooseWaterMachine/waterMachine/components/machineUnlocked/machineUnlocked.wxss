@import '/common/iconfont/iconfont.wxss'; 
@import '/common/reset.wxss'; 
@import '/common/btn-common.wxss';
.cmp-machineUnlocked-wrapper {
    width: 100vw;
    height: 100vh;
    position: relative;
    background-color: #fff;
}

.cmp-machineUnlocked {
    width: 750rpx;
    height: 296rpx;
    position: relative;
}

.cmp-machineUnlocked-bg {
    width: 100%;
    height: 212rpx;
    background-color: rgba(22, 119, 255, 1);
}

.cmp-machineUnlocked-text {
    width: 100%;
    height: 58rpx;
    font-size: 42rpx;
    top: 42rpx;
    position: absolute;
    z-index: 5;
    font-weight: bold;
    text-align: center;
    color: rgba(255, 255, 255, 1);
    line-height: 58rpx;
}

.cmp-waterPort-btn {
    width: 208rpx;
    height: 208rpx;
    margin: 14rpx auto;
    background-color: rgba(22, 119, 255, 1);
    box-shadow: 0rpx 6rpx 8rpx 0rpx rgba(22, 119, 255, 0.3);
    border-radius: 50%;
    text-align: center;
    font-size: 48rpx;
    font-weight: bold;
    color: #FFFFFF;
    line-height: 208rpx;
}

.cmp-waterPort-groupInner {
    display: flex;
    align-content: center;
    width: 236rpx;
    height: 236rpx;
    border-radius: 50%;
    margin: 16rpx auto;
    background: rgba(108, 169, 255, 0.2);
}

.cmp-waterPort-groupOut {
    display: flex;
    align-content: center;
    width: 268rpx;
    height: 268rpx;
    background-color: rgba(130, 181, 253, 0.22);
    border-radius: 50%;
    position: absolute;
    left: 241rpx;
    top: 142rpx;
    z-index: 8;
}

.cmp-waterPort-text {
    margin-top: 146rpx;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(153, 153, 153, 1);
    text-align: center;
}