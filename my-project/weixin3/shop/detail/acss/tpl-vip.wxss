  background: linear-gradient(239deg, rgba(255, 226, 158, 1) 0%, rgba(255, 210, 107, 1) 100%);
  border-radius: 32rpx;
  margin-left: auto;
  margin-right: auto;
  background-repeat: no-repeat;
  background-size: 100% auto;
  background-color: #fff;
}

