.pge-new-shower-detail{
  position: relative;
  width: 100vw;
  height: 100vh;
}
.pge-new-shower-detail .shower-bg{
  width: 100%;
  height: 512rpx;
  background-image: url(https://static.qiekj.com/h5/shower/shower_detail_bg.png);
  background-size: cover;
}
.pge-shower-body{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  padding: 398rpx 0 0;
  overflow-y: auto;
}
.pge-shower-body .shower-info{
  width: 100%;
  height: 100%;
  background-color: #ffffff;
  border-radius: 20rpx 20rpx 0 0;
}
.pge-shower-body .pge-shower-item{
  margin: 0 40rpx;
  padding: 34rpx 0;
  font-size: 28rpx;
  border-bottom: 2rpx solid #F9F8FF;
}
.pge-shower-item .machine-info{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 15rpx;
}
.pge-shower-body .forced-end{
  width: 280rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #ffffff;
  background-color: #2088FF;
  margin: 34rpx auto 0;
  border-radius: 53rpx;
}