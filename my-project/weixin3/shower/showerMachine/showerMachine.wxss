.pge-shower-wrapper {
    width: 100vw;
    height: 100vh;
}

.pge-shower-bg {
    width: 100%;
    height: 100%;
    background-color: rgba(22, 119, 255, 1);
}

.pge-shower {
    width: 100vw;
    height: 608rpx;
    position: relative;
}

.corporation-logo {
    height: 44rpx;
    margin: 0 auto;
    margin-top: 60rpx;
}

.corporation-logo {
    width: 290rpx;
}

.corporation-logo image{
    width: 100%;
    height: 100%;
}

.pge-useBtn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 446rpx;
    height: 124rpx;
    text-align: center;
    font-size: 40rpx;
    color: #FFFFFF;
    background-color: rgba(22, 119, 255, 1);
    box-shadow: 0px 4rpx 18rpx 0px rgba(100, 146, 252, 0.5);
    border-radius: 62rpx;
    margin: 0 auto;
    margin-top: 198rpx;
}
.pge-useBtn .iconfont{
    font-size: 24rpx;
    margin-left: 14rpx;
}
.shower-popup-content {
  min-height: 590rpx;
  padding-top: 36rpx;
  padding-bottom: 78rpx;
  border-radius: 44rpx 44rpx 0px 0px;
  background-color: #FFFFFF;
}

.shower-popup-content .popup-top-bar {
  width: 136rpx;
  height: 14rpx;
  margin: 0 auto;
  background-color: rgba(238, 240, 244, 1);
  border-radius: 7px;
}
.shower-popup-content .popup-content-title {
  margin-top: 48rpx;
  margin-left: 32rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}
.shower-popup-content .list-wrap {
  width: 686rpx;
  margin: 0 auto;
  max-height: 800rpx;
  overflow: auto;
  display: flex;
  padding-top: 20rpx;
  flex-wrap: wrap;
}

.shower-popup-content .item {
  width: 118rpx;
  margin-top: 40rpx;
  height: 118rpx;
  line-height: 118rpx;
  text-align: center;
  background-color: #F0F6FF;
  border-radius: 59rpx;
  color: #333333;
  font-size: 40rpx;
  margin-right: 71rpx;
}
.shower-popup-content .item:nth-child(4n){
  margin-right: 0;
}
.list-wrap .item.disabled {
  background-color: #F5F5F5;
  color: #CCCCCC;
}
.list-wrap .item.active {
  background-color: #1677FF;
  color: #FFFFFF;
}
.choosedBar {
  position: fixed;
  bottom: 124rpx;
  left: 0;
  display: flex;
  width: 100%;
  height: 124rpx;
}

.choosedBar .leftText {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 446rpx;
  height: 124rpx;
  line-height: 124rpx;
  text-align: center;
  margin-left: 32rpx;
  font-weight: bold;
  color: rgba(22, 119, 255, 1);
  font-size: 40rpx;
  background: #FFFFFF;
  box-shadow:0px 4rpx 18rpx 0px rgba(223,238,255,1);
  border-radius:62rpx;
  margin-right: 28rpx;
}

.choosedBar .choosedText {
  font-size: 32rpx;
  font-weight: 400;
  margin-right: 10rpx;
}

.choosedBar-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 212rpx;
  height: 124rpx;
  color: #FFFFFF;
  background: rgba(22, 119, 255, 1);
  box-shadow: 0 4rpx 18rpx 0 rgba(100, 146, 252, 0.5);
  border-radius: 62rpx;
  display: flex;
}
.choosedBar-btn .choosedBar-text{
    display: flex;
    align-items: center;
}
.choosedBar-btn .loading-btn{
    width: 30rpx;
    height: 30rpx;
    background-image: url(https://static.qiekj.com/gif/pay_loading.gif);
    background-size: 100%;
    margin-left: 10rpx;
}
.choosedBar-btn .btnText {
  width: 146rpx;
  padding-left: 30rpx;
  height: 124rpx;
}
.choosedBar-btn .arrow {
  font-size: 24rpx;
}
.choosedBar-btn .top {
  margin-right: 5rpx;
}
.rotate90 {
  display: inline-block;
  margin-left: 6rpx;
  transform: rotate(90deg);
  font-size: 24rpx;
}