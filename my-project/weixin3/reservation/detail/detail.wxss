@import './acss/tpl-machine.wxss';

.pge-shop-detail{
  width:100vw;
  height:100vh;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  background: #f5f5f5;
  position: relative;
}
.pge-shop-detail .pge-error{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.pge-error image{
  vertical-align: top;
  margin-bottom: 30rpx;
  width: 100%;
  height: 100%;
  transform: scale(2);
}
.pge-error .error-msg{
  font-size: 28rpx;
  color: #333333;
  text-align: center;
}
.pge-stop-shop{
  position: absolute;
  top:50%;
  left:50%;
  transform:translate(-50%,-50%);
}
.pge-stop-shop image{
  width: 100%;
  height: 100%;
  transform: scale(2);
}
