.pge-reserve-success-wrapper{
  width:100vw;
  height:100vh;
}
.pge-reserve-success-wrapper .pge-reserve-success-bg{
  height: 94rpx;
  background: #1677FF;
}
.pge-success-head .reser-status-btn {
    width: 208rpx;
    height: 208rpx;
    margin: 14rpx auto;
    background-color: rgba(22, 119, 255, 1);
    box-shadow: 0rpx 6rpx 8rpx 0rpx rgba(22, 119, 255, 0.3);
    border-radius: 50%;
    text-align: center;
    font-size: 42rpx;
    font-weight: 500;
    color: #FFFFFF;
    line-height: 208rpx;
}

.pge-success-head .reser-status-groupInner{
    display: flex;
    align-items: center;
    justify-content: center;
    width: 236rpx;
    height: 236rpx;
    border-radius: 50%;
    margin: 16rpx auto;
    background: rgba(108, 169, 255, 0.2);
}

.pge-success-head .reser-status-groupOut{
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  width: 268rpx;
  height: 268rpx;
  background-color: rgba(130, 181, 253, 0.22);
  border-radius: 50%;
  z-index: 8;
  margin: -144rpx auto 0;
}

.pge-reserve-success-wrapper .pge-reserve-time{
  text-align: center;
  font-size: 28rpx;
  font-weight: 400;
  line-height: 40rpx;
  margin-top: 23rpx;
  color: #999999;
}
.pge-reserve-success-wrapper .pge-reserve-operation{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 32rpx;
}
.pge-reserve-success-wrapper .pge-reserve-success-adbanner{
  margin-top: 47rpx;
}
.pge-reserve-operation .operation-btn{
  width: 224rpx;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 36rpx;
  border: 1px solid #2088FF;
  color: #2088FF;
  font-size: 32rpx;
  font-weight: 400;
  text-align: center;
  margin-right: 44rpx;
}
.pge-reserve-operation .operation-btn:last-child{
  margin-right: 0;
}
.pge-reserve-time text{
  color: #1874FF;
}
.pge-success-head .pge-reserve-machine-box{
  margin-top: -170rpx;
  text-align: center;
  color: #FFFFFF;
  font-size: 42rpx;
  font-weight: 500;
}
.pge-reserve-machine-box .reser-machine-name{
  font-size: 32rpx;
  line-height: 44rpx;
}
.pge-recommend-machine-box{
  width: 684rpx;
  height: 400rpx;
  background: #FFFFFF;
  border-radius: 28rpx;
  padding: 0 35rpx;
  margin: 28rpx auto 0;
}
.pge-recommend-machine-box .recommend-title{
  display: inline-block;
  font-size: 32rpx;
  padding: 20rpx 0 24rpx;
  line-height: 44rpx;
}
.pge-recommend-machine{
  position: relative;
  display: flex;
  align-items: center;
  border: 1px solid #EEEEEE;
  padding: 32rpx 41rpx;
  border-radius: 28rpx;
}
.pge-recommend-machine .machine-status-bg{
  position: absolute;
  right: 0;
  top: 0;
  width: 88rpx;
  height: 88rpx;
  background: url(https://static.qiekj.com/h5/alipay/machinestatusmachine_status.png) no-repeat;
  background-size: cover;
}
.pge-recommend-machine image{
  width: 69rpx;
  height: 69rpx;
  margin-right: 26rpx;
}
.pge-machine-text text{
  display: inline-block;
  color: #1677FF;
}
.pge-machine-text .name{
  font-size: 32rpx;
  font-weight: 500;
  line-height: 44rpx;
}
.pge-machine-text .tips{
  font-size: 24rpx;
}
.pge-machine-operation{
  width: 492rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
}
.pge-machine-operation button{
  width: 224rpx;
  height: 72rpx;
  line-height: 72rpx;
  border: 1px solid #2088FF;
  border-radius: 36rpx;
  text-align: center;
  color: #2088FF;
  font-size: 32rpx;
  font-weight: 400;
  margin: 32rpx 11rpx 0;
}

